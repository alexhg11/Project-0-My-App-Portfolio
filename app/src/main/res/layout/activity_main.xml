<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanoodegree Apps"
        android:id="@+id/topTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyStreamerBtn"
        android:layout_below="@+id/topTextView"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresAppBtn"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/spotifyStreamerBtn"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryAppBtn"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/scoresAppBtn"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildItBiggerBtn"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/libraryAppBtn"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/xyzReaderBtn"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/buildItBiggerBtn"
        android:layout_centerHorizontal="true"
        android:background="#F08C35" />

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneBtn"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/xyzReaderBtn"
        android:layout_centerHorizontal="true"
        android:background="#F44336" />

</RelativeLayout>
